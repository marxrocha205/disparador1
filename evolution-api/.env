# .env para Evolution API com PostgreSQL

# --- AUTENTICAÇÃO ---
AUTHENTICATION_TYPE=apikey
AUTHENTICATION_API_KEY=1234

# --- BANCO DE DADOS (PostgreSQL) ---
DATABASE_TYPE=postgres
DATABASE_ENABLED=true
DATABASE_CONNECTION_URI=postgres://evolution:1234@postgres:5432/evolution_db

# --- CONFIGURAÇÕES DO POSTGRES (para o contêiner do banco) ---
POSTGRES_USER=evolution
POSTGRES_PASSWORD=1234
POSTGRES_DB=evolution_db

# --- CONFIGURAÇÕES GERAIS ---
SERVER_URL=http://localhost:8080
PORT=8080

# --- CONFIGURAÇÕES DO WHATSAPP ---
WHATSAPP_NAME=Meu Disparador
WHATSAPP_AUTO_READ_MESSAGES=true